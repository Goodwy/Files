<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.zhanghai.android.files.ui.FixIllegalArgumentExceptionViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- This layout also clips the toolbar in order to avoid overlap with status bar. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?colorAppBarSurface"
            android:theme="?actionBarTheme"
            app:navigationIcon="@drawable/back_icon_control_normal_24dp"
            app:popupTheme="?actionBarPopupTheme" />
    </FrameLayout>
</FrameLayout>
