<resources>

    <style name="Platform.V21.Theme.MaterialFiles" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge" />
    <style name="Platform.Theme.MaterialFiles" parent="Platform.V21.Theme.MaterialFiles" />
    <style name="Base.Theme.MaterialFiles" parent="Platform.Theme.MaterialFiles">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorAppBarSurface">?colorPrimary</item>
        <item name="colorFloatingSurface">?colorBackgroundFloating</item>
        <item name="colorSpeedDialSurface">?colorPrimary</item>
        <item name="colorOnSpeedDialSurface">@android:color/white</item>
        <item name="colorSystemWindowScrim">@color/system_window_scrim</item>
        <item name="appBarLiftOnScroll">false</item>
        <item name="fileListAppBarLiftOnScroll">?appBarLiftOnScroll</item>
        <item name="dividerVisibility">@integer/visibility_visible</item>
        <item name="textButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="textButtonHorizontalPaddingNegative">-12dp</item>
    </style>
    <style name="Theme.MaterialFiles" parent="Base.Theme.MaterialFiles" />

    <style name="Platform.V21.Theme.MaterialFiles.TransparentStatusBar" parent="Theme.MaterialFiles">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Platform.Theme.MaterialFiles.TransparentStatusBar" parent="Platform.V21.Theme.MaterialFiles.TransparentStatusBar" />
    <style name="Base.Theme.MaterialFiles.TransparentStatusBar" parent="Platform.Theme.MaterialFiles.TransparentStatusBar" />
    <style name="Theme.MaterialFiles.TransparentStatusBar" parent="Base.Theme.MaterialFiles.TransparentStatusBar" />

    <style name="Platform.V21.Theme.MaterialFiles.Translucent" parent="Theme.MaterialFiles">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Platform.Theme.MaterialFiles.Translucent" parent="Platform.V21.Theme.MaterialFiles.Translucent" />
    <style name="Base.Theme.MaterialFiles.Translucent" parent="Platform.Theme.MaterialFiles.Translucent">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MaterialFiles.Translucent" parent="Base.Theme.MaterialFiles.Translucent" />

    <style name="Platform.V21.Theme.MaterialFiles.Immersive" parent="Theme.MaterialComponents.Bridge">
        <item name="android:navigationBarColor">@color/dark_70_percent</item>
        <item name="android:statusBarColor">@color/dark_70_percent</item>
    </style>
    <style name="Platform.Theme.MaterialFiles.Immersive" parent="Platform.V21.Theme.MaterialFiles.Immersive" />
    <style name="Base.Theme.MaterialFiles.Immersive" parent="Platform.Theme.MaterialFiles.Immersive">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="windowNoTitle">true</item>

        <item name="colorAppBarSurface">@color/dark_50_percent</item>
        <item name="colorFloatingSurface">?colorBackgroundFloating</item>
        <item name="colorSpeedDialSurface">?colorPrimary</item>
        <item name="colorOnSpeedDialSurface">@android:color/white</item>
        <item name="colorSystemWindowScrim">@color/system_window_scrim</item>
        <item name="appBarLiftOnScroll">false</item>
        <item name="fileListAppBarLiftOnScroll">?appBarLiftOnScroll</item>
        <item name="dividerVisibility">@integer/visibility_visible</item>
        <item name="textButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="textButtonHorizontalPaddingNegative">-12dp</item>
    </style>
    <style name="Theme.MaterialFiles.Immersive" parent="Base.Theme.MaterialFiles.Immersive" />
</resources>
