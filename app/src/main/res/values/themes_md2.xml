<resources>

    <!-- Overriding to add the missing searchViewStyle in Theme.MaterialComponents. -->
    <style name="ThemeOverlay.MaterialComponents.ActionBar.Primary" parent="">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/material_on_primary_emphasis_medium</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- Counteracts the effect of setting textColorPrimary for popup menus. -->
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <!-- Used to tint the ActionMode background and preserve the underline. -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>
    <style name="ThemeOverlay.MaterialComponents.ActionBar.Surface" parent="">
        <item name="android:textColorPrimary">@color/material_on_surface_emphasis_high_type</item>
        <item name="android:textColorSecondary">@color/material_on_surface_emphasis_medium</item>
        <item name="actionMenuTextColor">@color/material_on_surface_emphasis_medium</item>
        <item name="colorControlNormal">@color/material_on_surface_emphasis_medium</item>
        <!-- Counteracts the effect of setting textColorPrimary for popup menus. -->
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <!-- Used to tint the ActionMode background and preserve the underline. -->
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>

    <style name="Platform.V21.Theme.MaterialFiles.Md2" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimaryDark">@color/status_bar_background_md2_compat_daynight</item>
    </style>
    <style name="Platform.Theme.MaterialFiles.Md2" parent="Platform.V21.Theme.MaterialFiles.Md2" />
    <style name="Base.Theme.MaterialFiles.Md2" parent="Platform.Theme.MaterialFiles.Md2">

        <item name="android:colorBackground">?colorSurface</item>
        <item name="dropDownListViewStyle">@style/Widget.Material.ListView.DropDown</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/color_primary_md2_daynight</item>
        <item name="colorPrimaryVariant">?colorPrimary</item>
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorOnSecondary">?colorOnPrimary</item>
        <item name="colorSecondaryVariant">?colorSecondary</item>
        <item name="colorSurface">@color/color_surface_md2_daynight</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialFiles.CardView</item>
        <item name="minTouchTargetSize">0dp</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <item name="colorAppBarSurface">?colorSurface</item>
        <item name="colorFloatingSurface">?colorSurface</item>
        <item name="colorSpeedDialSurface">?colorSurface</item>
        <item name="colorOnSpeedDialSurface">?colorControlNormal</item>
        <item name="colorSystemWindowScrim">@color/system_window_scrim_md2_daynight</item>
        <item name="appBarLiftOnScroll">true</item>
        <item name="fileListAppBarLiftOnScroll">@bool/file_list_app_bar_lift_on_scroll_md2</item>
        <item name="dividerVisibility">@integer/visibility_gone</item>
        <item name="textButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="textButtonHorizontalPaddingNegative">-8dp</item>
    </style>
    <style name="Theme.MaterialFiles.Md2" parent="Base.Theme.MaterialFiles.Md2" />

    <style name="Platform.V21.Theme.MaterialFiles.TransparentStatusBar.Md2" parent="Theme.MaterialFiles.Md2">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Platform.Theme.MaterialFiles.TransparentStatusBar.Md2" parent="Platform.V21.Theme.MaterialFiles.TransparentStatusBar.Md2" />
    <style name="Base.Theme.MaterialFiles.TransparentStatusBar.Md2" parent="Platform.Theme.MaterialFiles.TransparentStatusBar.Md2" />
    <style name="Theme.MaterialFiles.TransparentStatusBar.Md2" parent="Base.Theme.MaterialFiles.TransparentStatusBar.Md2" />

    <style name="Platform.V21.Theme.MaterialFiles.Translucent.Md2" parent="Theme.MaterialFiles.Md2">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Platform.Theme.MaterialFiles.Translucent.Md2" parent="Platform.V21.Theme.MaterialFiles.Translucent.Md2" />
    <style name="Base.Theme.MaterialFiles.Translucent.Md2" parent="Platform.Theme.MaterialFiles.Translucent.Md2">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MaterialFiles.Translucent.Md2" parent="Base.Theme.MaterialFiles.Translucent.Md2" />

    <style name="Platform.V21.Theme.MaterialFiles.Immersive.Md2" parent="Theme.MaterialComponents">
        <item name="android:navigationBarColor">@color/dark_70_percent</item>
        <item name="android:statusBarColor">@color/dark_70_percent</item>
    </style>
    <style name="Platform.Theme.MaterialFiles.Immersive.Md2" parent="Platform.V21.Theme.MaterialFiles.Immersive.Md2" />
    <style name="Base.Theme.MaterialFiles.Immersive.Md2" parent="Platform.Theme.MaterialFiles.Immersive.Md2">

        <item name="android:colorBackground">?colorSurface</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="dropDownListViewStyle">@style/Widget.Material.ListView.DropDown</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/color_primary_md2_dark</item>
        <item name="colorPrimaryVariant">?colorPrimary</item>
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorOnSecondary">?colorOnPrimary</item>
        <item name="colorSecondaryVariant">?colorSecondary</item>
        <item name="colorSurface">@color/color_surface_md2_dark</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialFiles.CardView</item>
        <item name="minTouchTargetSize">0dp</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <item name="colorAppBarSurface">@color/dark_50_percent</item>
        <item name="colorFloatingSurface">?colorSurface</item>
        <item name="colorSpeedDialSurface">?colorSurface</item>
        <item name="colorOnSpeedDialSurface">?colorControlNormal</item>
        <item name="colorSystemWindowScrim">@color/system_window_scrim_md2_dark</item>
        <item name="appBarLiftOnScroll">true</item>
        <item name="fileListAppBarLiftOnScroll">@bool/file_list_app_bar_lift_on_scroll_md2</item>
        <item name="dividerVisibility">@integer/visibility_gone</item>
        <item name="textButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="textButtonHorizontalPaddingNegative">-8dp</item>
    </style>
    <style name="Theme.MaterialFiles.Immersive.Md2" parent="Base.Theme.MaterialFiles.Immersive.Md2" />
</resources>
